@model ContractorInfoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Contractor", FormMethod.Post, new { @class = "form-horizontal" }))
{
    if (!ViewData.ModelState.IsValid)
    {
        <div class="form-group">
            @Html.ValidationSummary(false, "", new { @class = "col-md-4 col-md-offset-4 alert alert-danger" })
        </div>
    }
    <legend><h4>@ViewBag.Title</h4></legend>
    <fieldset>
        <div class="form-group">
            @Html.HiddenFor(m => m.Id)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-md " })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone)
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-md", @placeholder = "Например: 21-34-45" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Tariff)
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Tariff, new { @class = "form-control input-md ", @placeholder = "Например: 10,50" })
            </div>
        </div>
    </fieldset>
    <div class="form-group media-right">
        <input type="submit" class="btn btn-success btn-sm" value="Сохранить" />
    </div>
}

@section scripts
{
    <script src="~/Scripts/jquery.mask.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#Phone').mask('99-99-99');
            $('#Tariff').mask("#.##0,00", { reverse: true })
        });
    </script>
}


