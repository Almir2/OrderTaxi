@model ContractorListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Перечень подрядчиков";
}
<div>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Код подрядчика</th>
                <th>Название фирмы</th>
                <th>Номер телефона</th>
                <th>Тариф за 1 км</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Contractors.Count() == 0)
            {
                <tr>
                    <td colspan="5" class="text-center">Подрядчики отсутствуют</td>
                </tr>
            }
            else
            {
                foreach (var contractor in Model.Contractors)
                {
                    <tr>
                        <td>@contractor.Id</td>
                        <td>@contractor.Name</td>
                        <td>@contractor.Phone</td>
                        <td>@contractor.Tariff</td>
                        <td>
                            @Html.ActionLink("Подробнее", "GetContractorDetails", new { @contractorId = contractor.Id }, new { @class = "btn btn-info btn-xs" })
                            @Html.ActionLink("Редактировать", "Edit", new { @contractorId = contractor.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Удалить", "Remove", new { @contractorId = contractor.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
    @Html.ActionLink("Добавить подрядчика", "Create", null , new { @class = "btn btn-primary"})
</div>



